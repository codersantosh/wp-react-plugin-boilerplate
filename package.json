{
	"name": "wp-react-plugin-boilerplate",
	"version": "1.0.0",
	"description": "WP React Plugin Boilerplate - WordPress Setting via React and Rest API",
	"author": "codersantosh",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build:admin": "wp-scripts build src/admin.js --webpack-src-dir='' --output-path=build/admin",
		"build:public": "wp-scripts build src/public.js --webpack-src-dir='' --output-path=build/public",
		"build": "npm-run-all build:admin build:public",
		"start:admin": "wp-scripts start src/admin.js --webpack-src-dir='' --output-path=build/admin",
		"start:public": "wp-scripts start src/public.js --webpack-src-dir='' --output-path=build/public",
		"start": "npm-run-all --parallel start:admin start:public",
		"packages-update": "wp-scripts packages-update",
		"makejsstring": "node .bin/make-string.js",
		"makepot": "wp i18n make-pot . languages/wp-react-plugin-boilerplate.pot --skip-js --exclude=src,vendor,node_modules --merge=languages/js.pot",
		"copy": "node .bin/copy.js",
		"replaceAtrc": "node .bin/replace-atrc.js",
		"deploy": "npm-run-all build replaceAtrc makepot copy",
		"initial-rename": "node .bin/initial-rename.js"
	},
	"devDependencies": {
		"@wordpress/babel-plugin-makepot": "^6.10.0",
		"@wordpress/scripts": "^30.3.0",
		"autoprefixer": "^10.4.7",
		"ncp": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"replace-in-file": "^7.2.0"
	},
	"dependencies": {
		"@wordpress/components": "^28.10.0",
		"@wordpress/url": "^4.10.0",
		"atrc": "^1.0.35",
		"lodash": "^4.17.21",
		"react-router-dom": "^6.3.0"
	},
	"browserslist": [
		"last 3 versions",
		"> 1%"
	]
}
